page { background: #f5f5f5; }

.userinfo { display: -webkit-flex; display: flex; padding: 50rpx; background: #1470b9; justify-content: center; }
.user-avatar { margin-right: 15px; }
.uavatar { width: 95px; height: 95px; border-radius: 100%; overflow: hidden; }
.user-txt { color: #fff; line-height: 1.5; }

.order-more { background: #fff; border-bottom: 1px solid #e9e9e9; }


.menu-list { margin-top: 10px; background: #fff; border-top: 1px solid #e9e9e9; border-bottom: 1px solid #e9e9e9; }
.weui-cell_link { padding: 15px; }

.icon-add { vertical-align: middle; padding-left: 5px; }

.first-child:before { display: none; }

.weui-button { width: 90%; height: 40px; background: #fff; margin: 20px auto; border: 1px solid #dedede; border-radius: 3px; color: #1e82d2; font-size: 14px; line-height: 40px; text-align: center; }